{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2017",
    "module": "commonjs",

    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "incremental": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,

    "baseUrl": ".",
    "paths": { "~/*": ["./source/*"] }
  },
  "include": ["**/*.ts", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules"]
}
